# Port the app will listen on
PORT=40000
# Node environment: development | production | test
NODE_ENV=development
# Public backend URL, used for OAuth callbacks and links
BACKEND_URL=http://localhost:40000
# Public frontend URL (used for email links, redirects)
FRONTEND_URL=http://localhost:40001

######### Database (Prisma) #########
# Example Postgres connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://postgres:password@localhost:5432/bash_executor?schema=public

######### JWT / Authentication #########
# Secrets must be at least 32 characters long
JWT_SECRET=changeme_jwt_secret_at_least_32_characters_long
JWT_REFRESH_SECRET=changeme_refresh_secret_at_least_32_chars
# Durations: examples: 15m, 60m, 7d, 30d
JWT_EXPIRES_IN=15m
JWT_REMEMBER_ME_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_REMEMBER_ME_EXPIRES_IN=30d



######### CORS & Throttle #########
# Allowed origin for CORS (single origin or comma-separated list)
CORS_ORIGIN=http://localhost:40000
# Throttle (rate limit) settings
THROTTLE_TTL=60000
THROTTLE_LIMIT=100

######### SMTP / Email #########
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password-or-app-password

# Add additional variables below as needed by other services (SENTRY_DSN, REDIS_URL, etc.)

######### Logger / Misc #########
# Logging configuration
LOG_LEVEL=info
# Set to 'false' to disable console logging
LOG_CONSOLE=true
# Directory for file logs
LOG_DIR=logs

######### Optional features #########
# Enable secret rotation features (true|false)
SECRET_ROTATION_ENABLED=false
# If your app runs behind HTTPS (load balancer), set to true to trust secure cookies
HTTPS_ENABLED=false


